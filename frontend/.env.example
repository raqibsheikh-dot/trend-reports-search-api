# Trend Reports - Frontend Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# API Configuration
# ============================================================================
# Backend API URL
# Development: http://localhost:8000
# Production: https://your-api.onrender.com
VITE_API_URL=http://localhost:8000

# API Key for authentication
# CRITICAL: Never commit the actual .env file with real API key
# Get this from your backend administrator
VITE_API_KEY=your_api_key_here

# ============================================================================
# Feature Flags (Optional)
# ============================================================================
# Enable advanced search features
VITE_ENABLE_ADVANCED_SEARCH=true

# Enable trend categorization filters
VITE_ENABLE_CATEGORIES=true

# Enable synthesis view
VITE_ENABLE_SYNTHESIS=true

# ============================================================================
# UI Configuration (Optional)
# ============================================================================
# Default number of search results
VITE_DEFAULT_TOP_K=5

# Maximum allowed search results
VITE_MAX_TOP_K=20

# Enable search history
VITE_ENABLE_HISTORY=true

# Enable export functionality
VITE_ENABLE_EXPORT=false

# ============================================================================
# Development (Optional)
# ============================================================================
# Enable debug logging
VITE_DEBUG=false

# Mock API responses (for development without backend)
VITE_MOCK_API=false
